<div class="container">


  <div class="row">
    <div class="col s12">
      <div class="card-label z-depth-1 col s12" style="padding: 8px 34.5px;">ブックマーク</div>
      <div class="card z-depth-1 col s12" style="margin-top: 0;">
        <div class="card-content col s12">
          <table class="centered">
            <thead>
              <tr>
                <th></th>
                <th>キャラクター名</th>
                <th>ワールド名</th>
                <th>ミニオン取得数</th>
              </tr>
            </thead>
            <tbody>

              <% @characters.each do |character| %>
                <tr>
                  <td><%= image_tag "#{character.image_url}", class: "circle", width: "50px" %></td>
                  <td><%= link_to character.name, character_path(character) %></td>
                  <td><%= character.world %></td>
                  <td><%= character.character_minions.count %></td>
                </tr>
              <% end %>

            </tbody>
          </table>
          <div class="center">
            <%= paginate @characters %>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>
