<div class="container">

  <div class="row">
    <div class="col s12">
      <div class="card hoverable z-depth-1">
        <div class="card-label">キャラクター</div>
        <div class="card-content">
          <table class="centered">
            <thead>
              <tr>
                <th></th>
                <th>キャラクター名</th>
                <th>サーバー名</th>
                <th>ミニオン取得数</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag "#{user.image_url}", class: "character-image-sm" %></td>
                  <td><%= link_to user.name, user_path(user) %></td>
                  <td><%= user.world %></td>
                  <td><%= user.user_minions.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="center">
            <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
