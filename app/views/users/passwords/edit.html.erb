<div class="container">


  <%= render "users/shared/error_messages", resource: resource %>


  <div class="row">
    <div class="col s12">
      <div class="card-label z-depth-1 col s12" style="padding: 8px 34.5px;"><%= t('.change_your_password') %></div>
      <div class="card z-depth-1 col s12" style="margin-top: 0;">
        <div class="card-content col s12">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>
            <div class="input-field">
              <i class="material-icons prefix">lock</i>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
              <%= f.label :password, t('.new_password') %>
              <span class="helper-text">
                <% if @minimum_password_length %>
                  <%= t('users.shared.minimum_password_length', count: @minimum_password_length) %><
                <% end %>
              </span>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">lock</i>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <%= f.label :password_confirmation, t('.confirm_new_password') %>
            </div>
            <div class="center">
              <%= f.buttont t('.change_my_password'), class: 'btn waves-effect waves-light', type: 'submit', data: { disable_with: t('.change_my_password') %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col s12">
      <%= render "users/shared/links" %>
    </div>
  </div>


</div>
