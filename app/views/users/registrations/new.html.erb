<div class="container">


  <%= render "users/shared/error_messages", resource: resource %>


  <div class="row">
    <div class="col s12">
      <div class="card-label z-depth-1 col s12" style="padding: 8px 34.5px;"><%= t('.sign_up') %></div>
      <div class="card z-depth-1 col s12" style="margin-top: 0;">
        <div class="card-content col s12">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="input-field">
              <i class="material-icons prefix">email</i>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <%= f.label :email %>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">lock</i>
              <%= f.password_field :password, autocomplete: "new-password" %>
              <%= f.label :password %>
              <span class="helper-text">
                <% if @minimum_password_length %>
                  <%= t('users.shared.minimum_password_length', count: @minimum_password_length) %>
                <% end %>
              </span>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">lock</i>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <%= f.label :password_confirmation %>
            </div>
            <div class="center">
              <%= f.button t('.sign_up'), class: 'btn waves-effect waves-light', type: 'submit', data: { disable_with: t('.sign_up') } %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col s12">
      <%= render "users/shared/links" %>
    </div>
  </div>


</div>
